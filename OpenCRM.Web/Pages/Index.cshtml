@page
@model OpenCRM.Web.Pages.IndexModel
@inject OpenCRM.Core.Web.Services.LanguageService.ILanguageService LanguageService
@inject OpenCRM.Core.Web.Services.TranslationService.ITranslationService TranslationService
@{
    ViewData["Title"] = "Homepage";
}

<div class="text-center">
    <h6 class="display-4">KEY_MANAGE_WELCOME: @Model.Translations?["KEY_MANAGE_WELCOME"]</h6>
  
    @if (Model.Block != null && Model.Block.Title != "")
    {
        <article class="block container">
            <div class="block-info">
                <div class="block-text-info">
                    <h1 class="block-title">@Model.Block.Title</h1>

                    @if (!string.IsNullOrEmpty(Model.Block.SubTitle))
                    {
                        <h2 class="block-subtitle">@Model.Block.SubTitle</h2>
                    }

                    @if (!string.IsNullOrEmpty(Model.Block.Description))
                    {
                        <p class="block-description">@Model.Block.Description</p>
                    }
                </div>

                @if (!string.IsNullOrEmpty(Model.Block.ImageUrl))
                {
                    <img class="block-image" src="@Model.Block.ImageUrl" />
                }
            </div>
        </article>
    }
</div>