
@if(BlockModel.Title != "")
{
    <h1>@BlockModel.Title</h1>
    
    @if (BlockModel.SubTitle != null && BlockModel.SubTitle != "")
    {
        <h2>@BlockModel.SubTitle</h2>
    }

    @if(BlockModel.Description != null)
    {
        <Description Text="@BlockModel.Description.Text" ListItems="@BlockModel.Description.ListItems" />
    }

    @if(BlockModel.Type == BlockType.Card)
    {
        <img src="@BlockModel.Image"/>
    }
}


@code {
    [Parameter]
    public BlockModel BlockModel { get; set; } = new BlockModel();
}
