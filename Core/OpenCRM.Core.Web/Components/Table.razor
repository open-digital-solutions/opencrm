
<div class="card">
    <div class="card-header d-flex justify-content-between">
        <div>
            <i class="fas fa-table me-1"></i>
            Events
        </div>
        <div>
            <a class="btn btn-success" href="/SwissLDP/Event/Create" data-toggle="tooltip" data-placement="top" title="Create new event">Create new</a>
        </div>
    </div>
    <div class="card-body">
        <table id="datatablesSimple">
            <thead>
                <tr>
                    @foreach(var item in Headers)
                    {
                        <th> 
                            @item
                        </th>
                    }
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var row in Rows)
                {
                    <tr>
                        @foreach(var item in row.Datas)
                        {
                            @if (item.IsButton)
                            {
                                <td>
                                    <a class="btn btn-primary btn-sm" data-toggle="tooltip" data-placement="top" title="@item.Label" href="@item.Url" >
                                        <i class="@item.IconName"></i>
                                    </a>
                                </td>
                            }   
                            else
                            {
                                <td>
                                    @item.Label
                                </td>
                            }
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@code {

    [Parameter]
    public List<string> Headers { get; set; } = new List<string>();

    [Parameter]
    public List<TableRow<TRowData>> Rows { get; set; } = new List<TableRow<TRowData>>();
}
