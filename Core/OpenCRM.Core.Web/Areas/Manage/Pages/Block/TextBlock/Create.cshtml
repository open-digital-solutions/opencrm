@page
@model OpenCRM.Core.Web.Areas.Manage.Pages.Block.TextBlock.CreateModel
@{
}

<div class="container-fluid mt-3">
    <div class="row justify-content-center">
        <div class="card border-1 rounded-lg p-0">
            <div class="card-header"><h3 class="text-center font-weight-light my-4">Create Block</h3></div>
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="TextModel.Code" class="form-control" placeholder="Code" />
                        <label asp-for="TextModel.Code" class="control-label"></label>
                        <span asp-validation-for="TextModel.Code" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <textarea asp-for="TextModel.Description" class="form-control" placeholder="Description" style="height:100px; resize:none;"></textarea>
                        <label asp-for="TextModel.Description" class="control-label"></label>
                        <span asp-validation-for="TextModel.Description" class="text-danger"></span>
                    </div>

                    <div class="mt-4 mb-0">
                        <div class="d-grid">
                            <input type="submit" value="Create" class="btn btn-primary btn-block" />
                        </div>
                    </div>

                    @if (Model.ValidateError != "")
                    {
                        <div class="mt-4">
                            <p class="text-danger fw-bold">
                                ! Error: @Model.ValidateError
                            </p>
                        </div>
                    }
                </form>
            </div>
        </div>
    </div>
</div>