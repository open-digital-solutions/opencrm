@page
@model OpenCRM.Core.Web.Areas.Manage.Pages.DataBlock.CreateModel
@{
}

<div class="container-fluid mt-3">
    <div class="row justify-content-center">
        <div class="card border-1 rounded-lg p-0">
            <div class="card-header"><h3 class="text-center font-weight-light my-4">Create Block</h3></div>
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="Model.Code" class="form-control" placeholder="Code" />
                        <label asp-for="Model.Code" class="control-label"></label>
                        <span asp-validation-for="Model.Code" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Model.Title" class="form-control" placeholder="Title" />
                        <label asp-for="Model.Title" class="control-label"></label>
                        <span asp-validation-for="Model.Title" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <textarea asp-for="Model.SubTitle" class="form-control" placeholder="SubTitle"></textarea>
                        <label asp-for="Model.SubTitle" class="control-label"></label>
                        <span asp-validation-for="Model.SubTitle" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <textarea asp-for="Model.Description" class="form-control" placeholder="Description" style="height:100px;"></textarea>
                        <label asp-for="Model.Description" class="control-label"></label>
                        <span asp-validation-for="Model.Description" class="text-danger"></span>
                    </div>

                    <select id="select-image" class="form-select mb-3" aria-label="Default select example" asp-for="ImageIdSelected">
                        <option selected value="">Select an images</option>
                        @foreach(var image in Model.Images)
                        {
                            <option value="@image.Id">@image.ImageName</option>
                        }
                    </select>

                    <div class="mt-4 mb-0">
                        <div class="d-grid">
                            <input type="submit" value="Create" class="btn btn-primary btn-block"/>
                        </div>
                    </div>
                    
                    @if (Model.ValidateError != "")
                    {
                        <div class="mt-4">
                            <p class="text-danger fw-bold">
                                ! Error: @Model.ValidateError
                            </p>
                        </div>
                    }
                </form>
            </div>
        </div>
    </div>
</div>