@page
@model OpenCRM.Core.Web.Areas.Manage.Pages.DataBlock.CreateModel
@{
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="card border-1 rounded-lg p-0">
            <div class="card-header"><h3 class="text-center font-weight-light my-4">Create Block</h3></div>
            <div class="card-body">
                <form method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="Model.Title" class="form-control" placeholder="Main Text" />
                        <label asp-for="Model.Title" class="control-label"></label>
                        <span asp-validation-for="Model.Title" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Model.SubTitle" class="form-control" placeholder="Sub Text" />
                        <label asp-for="Model.SubTitle" class="control-label"></label>
                        <span asp-validation-for="Model.SubTitle" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Model.Description" class="form-control" placeholder="Description" />
                        <label asp-for="Model.Description" class="control-label"></label>
                        <span asp-validation-for="Model.Description" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <input asp-for="FileData" type="file" class="form-control" data-msg-invalid-file="select file" accept="image/*"/>
                        <span asp-validation-for="FileData" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <input asp-for="IsPublic" class="form-check-input" />
                        <label asp-for="IsPublic" class="form-check-label"></label>
                        <span asp-validation-for="IsPublic" class="text-danger"></span>
                    </div>
                    <div class="mt-4 mb-0">
                        <div class="d-grid">
                            <input type="submit" value="Create" class="btn btn-primary btn-block"/>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>